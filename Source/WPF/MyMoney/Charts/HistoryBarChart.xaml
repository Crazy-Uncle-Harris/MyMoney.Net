<UserControl x:Class="Walkabout.Charts.HistoryBarChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Walkabout.Charts"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <UserControl.Resources>
    </UserControl.Resources>
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Export..." Click="OnExport"/>
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid>
        <local:AnimatingBarChart x:Name="Chart" Foreground="#767676" LineBrush="#E0E0E0" Margin="10" ColumnHover="OnColumnHover" ColumnClicked="OnColumnClicked"/>
        <ComboBox x:Name="RangeCombo" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" />
    </Grid>
    
</UserControl>
