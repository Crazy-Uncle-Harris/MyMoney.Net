<UserControl x:Class="Walkabout.Controls.AppSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"     
             xmlns:c="clr-namespace:Walkabout.Controls"         
             mc:Ignorable="d" 
             BorderBrush="{DynamicResource FlyoutBorderThemeBrush}" BorderThickness="1"
             Background="{DynamicResource FlyoutBackgroundThemeBrush}"
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type Label}">
                <Setter Property="Margin" Value="0,5,5,0" />
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
            <Style TargetType="{x:Type TextBox}">
                <Style.Triggers>
                    <Trigger Property="Validation.HasError" Value="true">
                        <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- back button header -->
        <Grid Grid.Row="0"  Background="#007ACC">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton" IsEnabled="True" Style="{DynamicResource BackButton}"  Click="OnCloseClicked"
                    VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="4,4,0,0"></Button>
            <Label FontSize="18" Grid.Column="1" VerticalAlignment="Center" Foreground="White" FontWeight="DemiBold">Settings</Label>
        </Grid>

        <!-- Password -->
        <Label Grid.Row="1" >Database Password:</Label>
        <c:PasswordControl x:Name="editPasswordBox" Grid.Row="2" Margin="5,0" Background="#80FFFFC0" PasswordChanged="OnPasswordChanged" MinHeight="20"/>

        <Label Grid.Column="0" Grid.Row="3">Theme:</Label>
        <ComboBox x:Name="comboBoxTheme"  Margin="5,0" Grid.Row="4" SelectionChanged="OnThemeChanged" />

        <Label Grid.Column="0" Grid.Row="5">Fiscal Year Start:</Label>
        <ComboBox x:Name="comboBoxFiscalYear"  Margin="5,0" Grid.Row="6" SelectionChanged="OnFiscalYearChanged" />

        <CheckBox x:Name="checkBoxRentalSupport" Margin="5,5" Grid.Row="7" Checked="OnRentalSupportChanged" Unchecked="OnRentalSupportChanged">Rental management</CheckBox>

        <CheckBox x:Name="checkBoxPlaySounds" Margin="5,5" Grid.Row="8" Checked="OnPlaySoundsChanged" Unchecked="OnPlaySoundsChanged">Play sounds</CheckBox>

    </Grid>
</UserControl>
